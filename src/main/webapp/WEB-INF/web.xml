<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChiffreAffairesProduit</servlet-name>
        <servlet-class>Controller.ChiffreAffairesProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChiffreAffairesGeo</servlet-name>
        <servlet-class>Controller.ChiffreAffairesGeo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChiffreAffairesClients</servlet-name>
        <servlet-class>Controller.ChiffreAffairesClients</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>allCodes</servlet-name>
        <servlet-class>Controller.allCodes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduit</servlet-name>
        <servlet-class>Controller.deleteProduit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPurchaseOrder</servlet-name>
        <servlet-class>Controller.AddPurchaseOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationListener</servlet-name>
        <servlet-class>Controller.ApplicationListener</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChiffreAffairesProduit</servlet-name>
        <url-pattern>/ChiffreAffairesProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChiffreAffairesGeo</servlet-name>
        <url-pattern>/ChiffreAffairesGeo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChiffreAffairesClients</servlet-name>
        <url-pattern>/ChiffreAffairesClients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>allCodes</servlet-name>
        <url-pattern>/allCodes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProduit</servlet-name>
        <url-pattern>/deleteProduit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPurchaseOrder</servlet-name>
        <url-pattern>/AddPurchaseOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationListener</servlet-name>
        <url-pattern>/ApplicationListener</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginController</welcome-file>
    </welcome-file-list>
</web-app>
